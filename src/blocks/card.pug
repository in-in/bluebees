mixin card(list)
  each item in list
    mj-column(
      css-class='card' + item.cardClass
      background-color='pink')

      mj-image(
        css-class='card__image'
        width=item.img[1]
        src=pathToImage + item.img[0])

      mj-text(
        css-class='card__title'
        mj-class='card__title'
        align='center')

        p.card__title-text!= item.title

      mj-text(
        mj-class='card__desc'
        align='center'
        color=darkText
        line-height='1.7'
        padding-bottom='22px')

        p.card__desc-text!= item.desc
