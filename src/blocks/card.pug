mixin card(list)
  each item in list
    mj-column(
      css-class=`card ${item.cardClass}`)&attributes(attributes)

      mj-image(
        css-class='card__image'
        src=pathToImage + item.img[0]
        width=item.img[1])

      mj-text(
        css-class='card__title'
        align='center')

        p.card__title-text!= item.title

      mj-text(
        height='103px'
        align='center'
        color=darkText
        css-class='card__desc'
        line-height='170%')

        p.card__desc-text!= item.desc
