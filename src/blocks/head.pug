mj-head
  mj-title Bluebees
  mj-font(
    name='Open Sans'
    href='https://fonts.googleapis.com/css?family=Open+Sans:400,400i,600,700,800')/
  mj-attributes
    mj-all(font-family='Open Sans, sans-serif')/
    mj-section(padding='0')/
    mj-image(padding='0')/
    mj-text(padding='0', line-height='1.3')/
    mj-class(
      name='inner-padding'
      padding-left='44px'
      padding-right='44px')/
    mj-class(
      name='title'
      align='center'
      font-weight='800'
      text-transform='uppercase')/
    mj-class(
      name='title--small'
      color=whiteColor
      font-size='30px')/

  mj-style(inline='inline') 
    | a { text-decoration: none; color: inherit; }
    | p { margin: 0; color: inherit; }
  mj-style.
    @media all and (min-width: 480px) {
      img[alt='logo'] {
        width: 122px !important;
      }
      .phone {
        font-size: 16px !important;
      }
    }
