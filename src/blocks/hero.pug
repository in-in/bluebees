include logo.pug
include phone.pug
include button.pug

mixin hero()
  mj-section(
    background-repeat='no-repeat'
    background-size='cover'
    background-url=imagePath + 'hero.jpg'
    padding-left='25px'
    padding-right='25px'
    padding-top='25px')
    mj-group(
      width='100%'
      vertical-align='middle')
      mj-column(vertical-align='middle')
        +logo()
      mj-column(vertical-align='middle')
        +phone([
          ['+ (000) 123 4567'],
          ['+ (123) 456 7890']
          ])
    mj-column(width='100%')
      mj-text(
        mj-class='title title--small'
        line-height='.6'
        padding-top='44px') We are an
      mj-text(
        mj-class='title'
        color=mainColor
        font-size='62px'
        line-height='1') Creative
      mj-text(
        mj-class='title title--small'
        line-height='.8') Digital Agency
    mj-column(width='60%')
      mj-text(
        align='center'
        color=whiteColor
        line-height='1.5'
        font-size='15px'
        padding-top='12px') Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euis.mod tincidunt ut laoreet 
      +button()&attributes({
        'padding-top': '27px',
        'padding-bottom': '58px'
        })
